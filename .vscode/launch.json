{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Example",
      "type": "dart",
      "request": "launch",
      "cwd": "${workspaceFolder}/example",
      "args": [],
      "env": {}
    },
    {
      "name": "Run iOS Example",
      "type": "dart",
      "request": "launch",
      "cwd": "${workspaceFolder}/contactos_ios/example",
      "args": [],
      "env": {}
    },
    {
      "name": "Flutter Test",
      "request": "launch",
      "type": "dart",
      "program": "test/contacts_test.dart",
      "env": {
        "ENVIRONMENT": "test"
      },
      "console": "debugConsole",
      "runTestsOnDevice": false,
      "templateFor": "test",
      "toolArgs": [
        "--color",
        "--reporter=expanded",
        "--file-reporter=json:coverage/tests.json",
        "--timeout=30s",
        "--concurrency=12"
        /* "--name=handles failed connection attempts" */
      ],
      "args": []
    }
  ]
}